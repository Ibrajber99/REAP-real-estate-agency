@model Real_Estate_Project.ViewModels.RegisterViewModel
@using Real_Estate_Project.DataAccess.Data_Models
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card text-white bg-dark mb-3" style="margin-bottom:2em;">
    <div class="card-body">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 style="text-align:center">@ViewBag.Title New User</h2>
            <hr />
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.RoleID, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.registeringUser.RoleID, new SelectList(Model.rolesList, "Name", "Name"))
                            @Html.ValidationMessageFor(model => model.registeringUser.RoleID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.UserName, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.FirstName, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.LastName, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.MiddleName, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.MiddleName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.SocialSecurityNumber, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.SocialSecurityNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.SocialSecurityNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.StreetAddress, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.StreetAddress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.StreetAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.Municipality, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.Municipality, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.Municipality, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.Province, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.registeringUser.Province,
                           new SelectList(Provinces.ProvinceMap, "Value", "Key"), "Select province")
                            @Html.ValidationMessageFor(model => model.registeringUser.Province, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
