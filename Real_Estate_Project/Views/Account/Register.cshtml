            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.CellPhone, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.CellPhone, new { htmlAttributes = new { @class = "form-control" } })
