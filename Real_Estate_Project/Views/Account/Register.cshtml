                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.PostalCode, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.PostalCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.registeringUser.HomePhone, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.registeringUser.HomePhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.registeringUser.HomePhone, "", new { @class = "text-danger" })
                        </div>
