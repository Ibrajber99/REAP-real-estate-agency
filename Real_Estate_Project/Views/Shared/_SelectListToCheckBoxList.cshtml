@model  List<SelectListItem>


<table>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>
                @Html.CheckBoxFor(m => m[i].Selected)
            </td>
            <td>
                @Html.DisplayFor(m => m[i].Text)
                @Html.HiddenFor(m => m[i].Value)
                @Html.HiddenFor(m => m[i].Text)
            </td>
        </tr>
    }
</table>

