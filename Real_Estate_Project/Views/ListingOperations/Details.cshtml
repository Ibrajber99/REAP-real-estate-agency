@model Real_Estate_Project.ViewModels.ListingViewModel

@{ ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Details</h2>
<div class="row">
    <div class="col-5">
        <div class="card text-white bg-dark mb-3">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                @if (Model.InputModel.ImagesContent.Count > 0)
                {
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.InputModel.ImagesContent.Count; i++)
                        {
                            if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <img src="@Url.Action("DisplayFullImage", new { id = Model.InputModel.ImagesContent.ToArray()[i].ID })"
                                         alt="Listing Image" style="height:300px; width:600px;" />
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Action("DisplayFullImage", new { id = Model.InputModel.ImagesContent.ToArray()[i].ID })"
                                         alt="Listing Image" style="height:300px; width:600px;" />
                                </div>
                            }
                        }

                    </div>
                }
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <a class="btn btn-outline-warning" role="button" href="@Url.Action("Edit","ListingOperations",new {id =  Model.InputModel.ID})">Edit</a>
            <a class="btn btn-outline-danger" role="button" href="@Url.Action("Index","ListingOperations")">Back to List</a>
            <a class="btn btn-outline-info" role="button" href="@Url.Action("Create","Viewings",new {listingId = Model.InputModel.ID})">Request Viewing</a>
        </div>
        <div class="row">
            <div class="col-6">
                <iframe width="710"
                        height="550"
                        style="border:0"
                        loading="lazy"
                        allowfullscreen
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCPSyNxsQaSMNRBLaymaNm57vFrW0MQ674
                    &q=@Model.InputModel.ListingAddress.PostalCode , Canada">
                </iframe>
            </div>
        </div>
    </div>
    <div class="col-7">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-body">
                <div class="card text-white bg-dark mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Basic Information</h5>
                        <hr />
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-user-tag"></i>
                                    @Html.DisplayFor(model => model.InputModel.Customer.FullName)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-tags"></i>
                                    @Html.DisplayFor(model => model.InputModel.Price)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-user-tie"></i>
                                    @Html.DisplayFor(model => model.InputModel.AssociatedAgent.FullName)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @Html.DisplayFor(model => model.InputModel.ListingAddress.StreetAddress)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-city"></i>
                                    @Html.DisplayFor(model => model.InputModel.ListingAddress.Municipality)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-map-pin"></i>
                                    @Html.DisplayFor(model => model.InputModel.ListingAddress.Province)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fab fa-usps"></i>
                                    @Html.DisplayFor(model => model.InputModel.ListingAddress.PostalCode)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InputModel.ListingAddress.AddressDetails, 
                                   new { @class = "text-primary" })
                                    @Html.DisplayFor(model => model.InputModel.ListingAddress.AddressDetails)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-ruler-combined"></i>
                                    @Html.DisplayFor(model => model.InputModel.SquareFootage)
                                </div>

                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-bed"></i>
                                    @Html.DisplayFor(model => model.InputModel.NumOfBeds)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="fas fa-bath"></i>
                                    @Html.DisplayFor(model => model.InputModel.NumOfBaths)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <i class="far fa-compass"></i>
                                    @Html.DisplayFor(model => model.InputModel.CityArea)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InputModel.SummaryFeature, new { @class = "text-primary" })
                                    @Html.DisplayFor(model => model.InputModel.SummaryFeature)
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-6">
                                <ul class="list-group">
                                    <i class="fas fa-fire list-group-item active"></i>
                                    @foreach (var item in Model.InputModel.Heating)
                                    {
                                        <li class="list-group-item text-dark">@item.HeatingType</li>
                                    }
                                </ul>
                            </div>
                            <div class="col-6">
                                <ul class="list-group">
                                    <i class="fas fa-puzzle-piece list-group-item active"></i>
                                    @foreach (var item in Model.InputModel.Features)
                                    {
                                        <li class="list-group-item text-dark">@item.FeatureName</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InputModel.DateCreated, new { @class = "text-primary" })
                                    @Html.DisplayFor(model => model.InputModel.DateCreated)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InputModel.UserCreator, new { @class = "text-primary" })
                                    @Html.DisplayFor(model => model.InputModel.UserCreator.FullName)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InputModel.DateUpdated, new { @class = "text-primary" })
                                    @Html.DisplayFor(model => model.InputModel.DateUpdated)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InputModel.UserUpdator, new { @class = "text-primary" })
                                    @Html.DisplayFor(model => model.InputModel.UserUpdator.FullName)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
