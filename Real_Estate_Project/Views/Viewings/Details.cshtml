@model Real_Estate_Project.ViewModels.ViewingViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<div class="row">
    <div class="col-3">
        <div class="card text-white bg-dark mb-3">
            <img class="card-img-top" src="https://www.flaticon.com/premium-icon/icons/svg/3638/3638766.svg"
                 style="width:5em;height:5em;">
            <hr />
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReadonlyViewingModel.CreatedDate, new { @class = "text-primary" })
                            @Html.DisplayFor(model => model.ReadonlyViewingModel.CreatedDate)
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReadonlyViewingModel.UserCreator, new { @class = "text-primary" })
                            @Html.DisplayFor(model => model.ReadonlyViewingModel.UserCreator.FullName)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReadonlyViewingModel.UpdatedDate, new { @class = "text-primary" })
                            @Html.DisplayFor(model => model.ReadonlyViewingModel.UpdatedDate)
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReadonlyViewingModel.UserUpdator, new { @class = "text-primary" })
                            @Html.DisplayFor(model => model.ReadonlyViewingModel.UserUpdator.FullName)
                        </div>
                    </div>
                </div>

            </div>
            <a class="btn btn-outline-warning" role="button" href="@Url.Action("Edit","Viewings",new {id =  Model.ReadonlyViewingModel.ID})">Edit</a>
            <a class="btn btn-outline-danger" role="button" href="@Url.Action("Index","Viewings")">Back to List</a>
        </div>
    </div>


    <div class="col-9" style="margin-bottom:3em">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-body">
                <br />
                <div class="row">
                    <div class="col-6">
                        <div class="card text-white bg-dark mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Basic Information</h5>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.ViewingHost, new { @class = "text-primary" })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.ViewingHost.FullName)
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.Customer, new { @class = "text-primary" })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.Customer.FullName)
                                        </div>

                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.StartDate, new { @class = "text-primary" })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.StartDate)
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.EndDate, new { @class = "text-primary" })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.EndDate)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card text-white bg-dark mb-3">
                              <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                                @if (Model.ReadonlyViewingModel.Listing.ImagesContent.Count > 0)
                                {
                                    <div class="carousel-inner">
                                        @for (int i = 0; i < Model.ReadonlyViewingModel.Listing.ImagesContent.Count; i++)
                                        {
                                            if (i == 0)
                                            {
                                                <div class="carousel-item active">
                                                    <img src="@Url.Action("DisplayFullImage","ListingOperations" ,
                                                             new { id = Model.ReadonlyViewingModel.Listing.ImagesContent.ToArray()[i].ID })"
                                                         alt="Listing Image" class="d-block w-100" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img src="@Url.Action("DisplayFullImage","ListingOperations", 
                                                             new { id = Model.ReadonlyViewingModel.Listing.ImagesContent.ToArray()[i].ID })"
                                                         alt="Listing Image" class="d-block w-100" />
                                                </div>
                                            }
                                        }

                                    </div>
                                }
                                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Property Information</h5>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.Listing, new { @class = "text-primary " })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.Listing.ListingAddress.PostalCode)
                                        </div>

                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.Listing.SquareFootage, new { @class = "text-primary" })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.Listing.SquareFootage)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.Listing.CityArea, new { @class = "text-primary" })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.Listing.CityArea)
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ReadonlyViewingModel.Listing.Price, new { @class = "text-primary" })
                                            @Html.DisplayFor(model => model.ReadonlyViewingModel.Listing.Price)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
            </div>
        </div>
    </div>
</div>